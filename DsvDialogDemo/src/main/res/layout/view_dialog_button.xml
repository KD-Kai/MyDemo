<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:layout_marginBottom="64px"
    android:id="@+id/dialog_button_view">
    <TextView
        android:id="@+id/dialog_button_left"
        android:layout_width="208px"
        android:layout_height="80px"
        android:textSize="30px"
        android:textColor="@color/normal_text"
        android:background="@drawable/bg_btn_confirm"
        android:gravity="center" />
    <TextView
        android:id="@+id/dialog_button_right"
        android:layout_width="208px"
        android:layout_height="80px"
        android:textSize="30px"
        android:textColor="@color/normal_text"
        android:background="@drawable/bg_btn_cancel"
        android:gravity="center"
        android:layout_marginStart="80px"/>
</LinearLayout>